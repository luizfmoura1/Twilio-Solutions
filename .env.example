# ===========================================
# TWILIO CONFIGURATION
# ===========================================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_NUMBER=+1234567890
TWILIO_WORKFLOW_SID=your_workflow_sid_here
TWILIO_WORKSPACE_SID=your_workspace_sid_here

# Base URL for webhooks (ngrok for development)
BASE_URL=https://your-ngrok-url.ngrok-free.dev

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite (development)
DATABASE_URL=sqlite:///twilio_app.db

# PostgreSQL (production)
# DATABASE_URL=postgresql+psycopg://user:password@host:5432/database?sslmode=require

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=generate-a-secure-random-string-here
JWT_EXPIRATION_HOURS=24

# ===========================================
# DEVELOPMENT OPTIONS
# ===========================================
# Set to true to skip Twilio signature validation (development only!)
# SKIP_TWILIO_VALIDATION=true

# ===========================================
# SLACK ALERTS
# ===========================================
# Webhook URL from Slack Incoming Webhooks app
# Create at: https://api.slack.com/apps -> Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===========================================
# ALERT PREFERENCES
# ===========================================
# Set to true/false to enable/disable alerts for each event type
ALERT_ON_INITIATED=true
ALERT_ON_RINGING=false
ALERT_ON_ANSWERED=true
ALERT_ON_COMPLETED=true
ALERT_ON_MISSED=true
ALERT_ON_FAILED=true
ALERT_ON_RECORDING=false
